@page
@model OnlineEnrolmentSystem.Pages.Enquiry.ContactUsModel
@{
    ViewData["Title"] = "Enquiry - Contact Us";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4>📩 Contact Us</h4>
                </div>
                <div class="card-body p-4">

                    @* Success message after sending *@
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success text-center fw-bold">
                            @Model.SuccessMessage
                        </div>
                    }

                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label fw-bold"></label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-bold"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Subject" class="form-label fw-bold"></label>
                            <input asp-for="Input.Subject" class="form-control" placeholder="Write the subject of your enquiry" />
                            <span asp-validation-for="Input.Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Message" class="form-label fw-bold"></label>
                            <textarea asp-for="Input.Message" class="form-control" rows="5" placeholder="Write your enquiry message here..."></textarea>
                            <span asp-validation-for="Input.Message" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">Send Enquiry</button>
                        </div>
                    </form>

                </div>
            </div>
            <div class="text-secondary text-center mt-1" style="font-size:12px">Just testing purpose, no enquiry email will be sent to admin.</div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}