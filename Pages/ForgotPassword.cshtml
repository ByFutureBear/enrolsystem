@page
@model OnlineEnrolmentSystem.Pages.ForgotPasswordModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light p-2">
    <div class="card shadow-lg p-4" style="width: 500px; border-radius: 15px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-3">🔑 Forgot Password</h3>
            <p class="text-muted text-center mb-4">
                Enter your <strong>email</strong> and <strong>phone number</strong>.
                If they match our records, we’ll generate a <span class="fw-bold">temporary password</span> for you.
            </p>

            @if (!string.IsNullOrWhiteSpace(Model.GeneratedPassword))
            {
                <div class="alert alert-success">
                    ✅ Temporary password created: <strong>@Model.GeneratedPassword</strong>
                    <div class="small mt-1">Use this password to log in, then change it immediately.</div>
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2" role="alert"></div>

            <form method="post" novalidate>
                <!-- Email -->
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label fw-bold"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Phone -->
                <div class="form-group mb-4">
                    <label asp-for="Input.PhoneNumber" class="form-label fw-bold"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <button type="submit" class="btn btn-primary w-100 mb-2">
                    Generate Temporary Password
                </button>
                <a asp-page="/Login" class="btn btn-outline-secondary w-100">
                    Back to Login
                </a>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
